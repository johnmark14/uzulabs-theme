<!-- /templates/collection.liquid -->
<link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css"/>
<script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
<style>
  .list-collection-page .hero {
    {%if collection.featured_image != blank %}
    background-image: url('{{collection.featured_image | img_url: "master"}}');
    {%else%}
    background-image: url('{{section.settings.featured_image | img_url: "master"}}');
    {%endif%}
    background-size: cover;
    background-position: top center;
    background-repeat: no-repeat;
    {%if section.settings.show_collection_image != true and section.settings.featured_image == blank %}
    display: none;
    {%endif%}
  }
</style>
<section class="hero is-medium is-link">
  <div class="hero-body has-text-centered">
    <p>Collection Image</p>
  </div>
</section>
<section class="section collection-grid">
  <div class="wrapper">
    <nav class="breadcrumb is-small" aria-label="breadcrumbs">
      <ul class="ml-0">
        <li><a href="{{routes.root_url}}" class="is-uppercase">Home</a></li>
      </ul>
    </nav>
    <div class="columns is-variable is-8-widescreen">
      <div class="column is-one-fifth">
        <h2 class="title is-uppercase is-size-5 pb-3">{{section.settings.text}}</h2>
        <div class="product-search">
          <div class="field">
            <p class="control has-icons-right">
              <input class="input" type="email" placeholder="Search Products">
              <span class="icon is-small is-right">
                <span class="icon icon-search" aria-hidden="true"></span>
              </span>
            </p>
          </div>
        </div>
        <div class="product-side-navigation">
          {% render 'custom-side-accordion' %}
        </div>
      </div>
      <div class="column has-text-centered">
        {% for collection in collections limit: 1%}
          <div class="container collections-wrapper">
            <h2 class="title collection_title is-uppercase is-size-5 pb-3">{{collection.title}}</h2>
            {% render 'custom-carousel-grid', collection: collection, index: forloop.index %}
          </div>
        {%endfor%}
      </div>
    </div>
  </div>
</section>
<script>
  // A $( document ).ready() block.
$( document ).ready(function() {
  // Breadcrumb Links
  // Main>Childlink>Grandchildlink
  $.urlParam = function(name){
    var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
    if (results==null) {
       return null;
    }
    return decodeURI(results[1]) || 0;
  }

  let breadTitle = function(str) {
    return str.replaceAll('_', ' ');
  }

  const TITLE = $.urlParam('title') || "{{collection.title}}";
  
  $breadcrumbs = $('.breadcrumb');
  if(TITLE) {
    $breadcrumbs.find('ul').append(`<li><a href="/collections" class="is-uppercase">Categories</a></li>`);
    $breadcrumbs.find('ul').append(`<li class="is-active"><a class="is-uppercase">${breadTitle(TITLE)}</a></li>`);
  }else {
    $breadcrumbs.find('ul').append(`<li class="is-active"><a class="is-uppercase">Categories</a></li>`);
  }
  $breadcrumbs.css('opacity', '1');
  $('h2.collection_title').text(`${(TITLE != "") ? TITLE : "Categories"}`);
});
</script>
{% schema %}
{
  "name": "List Collection v2",
  "class": "list-collection-page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "label": "Show collection image",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Collection Featured Image",
      "info": "This image will be shown if collection image is blank"
    },
    {
      "type": "header",
      "content": "Side Navigation Settings"
    },
    {
      "type": "text",
      "id": "navigation_text",
      "label": "Side Navigation Text",
      "default": "Shop by category"
    },
    {
      "type": "link_list",
      "id": "navigation_menu",
      "label": "Side Menu"
    },
    {
      "type": "checkbox",
      "id": "navigation_search",
      "label": "Show Side Navigation Search?",
      "default": true
    }
  ]
}
{% endschema %}
