{%- liquid
  assign color_background = section.settings.color_background
  assign blocks_length = 1
-%}
<style>
  #shopify-section-{{ section.id }} {
    background-color: {{color_background }};
  }
</style>
<section class="section">
    <div class="container">
        {% if section.settings.title != blank %}
            <div class="section-header text-center">
                <h2 class="h1 section-header__title is-uppercase is-size-4">{{ section.settings.title | escape }}</h2>
                {%unless section.settings.hide_rule == true%}
                  <hr class="hr--small">
                {%endunless%}
            </div>
        {% endif %}
    </div>
    <div class="container">
      <!-- Slider main container -->
      <div id="swiperClients" class="swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper is-align-items-flex-end">
          <!-- Slides -->
          {%for block in section.blocks %}
            {% assign blocks_length = forloop.index %}
            <div class="swiper-slide">
              <figure class="image">
                {% if block.settings.client_image != blank %}
                  <img src="{{block.settings.client_image | img_url: 'master'}}" alt="{{block.settings.client_description}}">
                {%else%}
                  <img src="https://bulma.io/images/placeholders/720x240.png">
                {%endif%}
              </figure>
            </div>
          {%endfor%}
        </div>
        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev swiper-button-prev-clients is-hidden-desktop" style="color: inherit; top: 40%;"></div>
        <div class="swiper-button-next swiper-button-next-clients is-hidden-desktop" style="color: inherit; top: 40%;"></div>
      </div>
    </div>
</section>
<script>
  const swiperClients = new Swiper('#swiperClients', { 
      // Optional parameters
      preloadImages: true,
      slidesPerView: 1,
      spaceBetween: 10,
      freeMode: true,
      navigation: {
        nextEl: '.swiper-button-next-clients',
        prevEl: '.swiper-button-prev-clients',
      },
      breakpoints: {
        640: {
            slidesPerView: 2,
            spaceBetween: 5,
        },
        768: {
            slidesPerView: 4,
            spaceBetween: 10,
        },
        1024: {
            slidesPerView: parseInt("{{blocks_length}}"),
            spaceBetween: 20,
        }
      }
  });
</script>
{% schema %}
{
  "name": "Carousel Clients",
  "tag": "section",
  "class": "carousel-clients",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "How to order"
    },
    {
      "type": "checkbox",
      "id": "hide_rule",
      "label": "Hide Horizontal Rule?",
      "default": false
    },
    {
      "type": "header",
      "content": "Slide Settings"
    },
    {
      "type": "color",
      "id": "color_background",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "name": "Carousel Clients",
      "type": "clients",
      "settings": [
        {
          "type": "image_picker",
          "id": "client_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "client_description",
          "label": "Description",
          "default": "Our Client Logo"
        }
      ]
    }
  ],
  "presets": [
     {
       "name": "Carousel Clients",
       "settings": {
          "title": "Our Clients" 
        },
        "blocks": [
          {
            "type": "clients"
          },
          {
            "type": "clients"
          },
          {
            "type": "clients"
          },
          {
            "type": "clients"
          }
        ]
      }
   ]
}
{% endschema %}
